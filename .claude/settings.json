{
  "permissions": {
    "allow": ["Bash(pnpm check)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm check || exit 2",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
