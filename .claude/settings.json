{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "pnpm lint",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "pnpm exec tsc --noEmit",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
